<%= form_for(@football_defense_stat) do |f| %>

    <%= f.label :date_played, "Date:" %>
    <%=f.date_select :date_played_on, :start_year => Time.now.year, :end_year => Time.now.year - 20, :order => [:day, :month, :year]  %>

    <%= f.label :opponent_played, "Opponent played:" %>
    <%= f.text_field :opponent %>

    <%= f.label :solotackles, "Solo tackles:" %>
    <%= f.text_field :solo_tackles, :class => "number_field_only" %>

    <%= f.label :assistedtackles, "Assisted tackles:" %>
    <%= f.text_field :assisted_tackles, :class => "number_field_only" %>

    <%= f.label :sacks_made, "Sacks:" %>
    <%= f.text_field :sacks, :class => "number_field_only" %>

    <%= f.label :stuffs_made, "Stuffs:" %>
    <%= f.text_field :stuffs, :class => "number_field_only" %>

    <%= f.label :stuffyards, "Stuff yards:" %>
    <%= f.text_field :stuff_yards, :class => "number_field_only" %>

    <%= f.label :forcedfumbles, "Forced fumbles:" %>
    <%= f.text_field :forced_fumbles, :class => "number_field_only" %>

    <%= f.label :fumblesrecovered, "Fumbles recovered:" %>
    <%= f.text_field :fumbles_recovered, :class => "number_field_only" %>

    <%= f.label :fumblesreturned, "Fumbles returned for touchdown:" %>
    <%= f.text_field :fumbles_returned_for_touchdown, :class => "number_field_only" %>

    <%= f.label :kicksblocked, "Blocked kicks:" %>
    <%= f.text_field :kicks_blocked, :class => "number_field_only" %>

    <%= f.label :ints, "Interceptions:" %>
    <%= f.text_field :interceptions, :class => "number_field_only" %>

    <%= f.label :intreturnyards, "Intercepted returned yards:" %>
    <%= f.text_field :intercepted_returned_yards, :class => "number_field_only" %>


    <%= f.label :intsreturnedfortd, "Interceptions returned for touchdown:" %>
    <%= f.text_field :interceptions_returned_for_touchdown, :class => "number_field_only" %>

    <%= f.label :longestintreturn, "Longest interception return:" %>
    <%= f.text_field :longest_interception_return, :class => "number_field_only" %>

    <%= f.label :passesdefended, "Passes defended:" %>
    <%= f.text_field :passes_defended, :class => "number_field_only" %>

    <%= f.label :sfts, "Safeties:" %>
    <%= f.text_field :safeties, :class => "number_field_only" %>


    <%= f.submit "Add Stat", class: "btn" %>

<% end %>