$('.edit_stat_window').html("<%= escape_javascript(render  :partial => 'football_defense_stats/edit', :locals => { :football_defense_stat => @football_defense_stat}) %>");
$('.edit_stat_window').modal();

//Validate the input
$('.edit_football_defense_stat').on('submit', function(e){

    //Check if there is any input field empty and stops the submit event
    var errorCount = 0;
    $('.edit_football_defense_stat input').each(function(){
        var $this = $(this);
        if($this.val() == ''){

            errorCount = errorCount + 1;
        }
    });

    if(errorCount != 0) {
        e.preventDefault();
        alert("You must complete all the fields.");
    }


});