<%= form_for(football_quarterback_stat) do |f| %>

    <%= f.label :date_played, "Date:" %>
    <%=f.date_select :date_played_on, :start_year => Time.now.year, :end_year => Time.now.year - 20, :order => [:day, :month, :year], :class => "date"  %>

    <%= f.label :opponent_played, "Opponent played:" %>
    <%= f.text_field :opponent %>

    <%= f.label :comp, "Passes completed:" %>
    <%= f.number_field :completions, :class => "number_field_only" %>

    <%= f.label :att, "Passes attempted:" %>
    <%= f.number_field :passing_attempts, :class => "number_field_only" %>

    <%= f.label :totalpassingyards, "Passing yards:" %>
    <%= f.number_field :passing_yards, :class => "number_field_only" %>

    <%= f.label :tds, "Touchdown:" %>
    <%= f.number_field :passing_touchdowns, :class => "number_field_only" %>

    <%= f.label :ints, "Interceptions:" %>
    <%= f.number_field :interceptions, :class => "number_field_only" %>

    <%= f.label :fum, "Fumbles:" %>
    <%= f.number_field :fumbles, :class => "number_field_only" %>

    <%= f.label :rush, "Rushes:" %>
    <%= f.number_field :rushing_attempts, :class => "number_field_only" %>

    <%= f.label :rushingyards, "Rushing yards:" %>
    <%= f.number_field :rushing_yards, :class => "number_field_only" %>

    <%= f.label :rushingtds, "Rushing touchdowns:" %>
    <%= f.number_field :rushing_touchdowns, :class => "number_field_only" %>


    <%= f.submit "Add Stat", class: "btn" %>

<% end %>