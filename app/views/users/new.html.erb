<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">

  <div class="span5 offset4 signup-form">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>


        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :birthday %>
        <%= f.date_select :birthday, :start_year => Time.now.year, :end_year => Time.now.year - 100, :order => [:month, :day, :year], :prompt => { :month => 'Month', :day => 'Day', :year => 'Year' }, :default => nil  %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>



        <%= f.submit "Create my account", class: "btn btn-large btn-primary", :style => "display:block;" %>

    <% end %>
  </div>

</div>