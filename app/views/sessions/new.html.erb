<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <div style="clear: both;"></div>

        <%= label_tag :remember_me,"Remember me", :style => "float:left;margin-right: 5px;" %>
        <%= check_box_tag :remember_me, 1, params[:remember_me], :style => "float:left;" %>

        <div style="clear: both;"></div>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p><b>New user?</b> &nbsp; <%= link_to "Sign up now!", signup_path %></p>

    <p><%= link_to "Forgot your password?", new_password_reset_path %></p>

  </div>
</div>