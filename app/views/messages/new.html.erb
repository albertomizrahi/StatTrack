<% provide(:title, "Contact Us") %>
<h1>Contact Us</h1>

<p>Have any feedback, suggestions, questions or issues? Feel free to write to us!</p>

<div class="row">
  <div class="span6 offset3">

    <%= form_for @message do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :name %>
          <%= f.text_field :name %>


          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :content, "Message" %>
          <%= f.text_area :content, :size => "20x5" %>

          <br />

        <%= f.submit "Send Message", :class => "btn btn-primary" %>
    <% end %>

  </div>
</div>