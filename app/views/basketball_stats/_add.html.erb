<%= form_for(@basketball_stat) do |f| %>

    <%=f.date_select :date_played_on, :start_year => Time.now.year, :end_year => Time.now.year - 20, :order => [:day, :month, :year]  %>


    <%= f.label :time_played, "Time played:" %>
    <%= f.number_field :minutes_played, :class => "number_field_only" %>
    <%= f.number_field :seconds_played, :class => "number_field_only" %>

    <%= f.label :opponent_played, "Opponent played:" %>
    <%= f.text_field :opponent %>

    <%= f.label :fgm, "Field goals made:" %>
    <%= f.number_field :field_goals_made, :class => "number_field_only" %>

    <%= f.label :fga, "Field goals attempted:" %>
    <%= f.number_field :field_goals_attempted, :class => "number_field_only" %>

    <%= f.label :threeptsmade, "Three pointers made:" %>
    <%= f.number_field :threepts_made, :class => "number_field_only" %>

    <%= f.label :threeptsattempted, "Three pointers attempted:" %>
    <%= f.number_field :threepts_attempted, :class => "number_field_only" %>

    <%= f.label :freethrowsmade, "Free throws made:" %>
    <%= f.number_field :free_throws_made, :class => "number_field_only" %>

    <%= f.label :freethrowsattempted, "Free throws attempted:" %>
    <%= f.number_field :free_throws_attempted, :class => "number_field_only" %>

    <%= f.label :offensiverebounds, "Offensive rebounds:" %>
    <%= f.number_field :offensive_rebounds, :class => "number_field_only" %>

    <%= f.label :defensiverebounds, "Defensive rebounds:" %>
    <%= f.number_field :defensive_rebounds, :class => "number_field_only" %>

    <%= f.label :assistsmade, "Assists:" %>
    <%= f.number_field :assists, :class => "number_field_only" %>

    <%= f.label :turnoversmade, "Turnovers:" %>
    <%= f.number_field :turnovers, :class => "number_field_only" %>

    <%= f.label :stealsmade, "Steals:" %>
    <%= f.number_field :steals, :class => "number_field_only" %>

    <%= f.label :blocksmade, "Blocks:" %>
    <%= f.number_field :blocks, :class => "number_field_only" %>

    <%= f.label :personalfoulsmade, "Personal fouls:" %>
    <%= f.number_field :personal_fouls, :class => "number_field_only" %>

    <%= f.submit "Add Basketball Stat", class: "btn" %>
<% end %>