<%= form_for(@basketball_stat) do |f| %>

    <%= f.label :date, "Date:" %>
    <%=f.date_select :date_played_on, {:start_year => Time.now.year, :end_year => Time.now.year - 20, :order => [:day, :month, :year]} %>

    <%= f.label :opponent_played, "Opponent played:" %>
    <%= f.text_field :opponent %>

    <%= f.label :time_played, "Time played:" %>
    <%= f.text_field :minutes_played, :class => "number_field_only" %>
    <%= f.text_field :seconds_played, :class => "number_field_only" %>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
    <%= f.label :fgm, "Field goals made:" %>
    <%= f.text_field :field_goals_made, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 49px;">
    <%= f.label :fga, "Field goals attempted:" %>
    <%= f.text_field :field_goals_attempted, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
    <%= f.label :threeptsmade, "Three pointers made:" %>
    <%= f.text_field :threepts_made, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 25px;">
    <%= f.label :threeptsattempted, "Three pointers attempted:" %>
    <%= f.text_field :threepts_attempted, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
    <%= f.label :freethrowsmade, "Free throws made:" %>
    <%= f.text_field :free_throws_made, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 42px;">
    <%= f.label :freethrowsattempted, "Free throws attempted:" %>
    <%= f.text_field :free_throws_attempted, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
    <%= f.label :offensiverebounds, "Offensive rebounds:" %>
    <%= f.text_field :offensive_rebounds, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 34px;">
    <%= f.label :defensiverebounds, "Defensive rebounds:" %>
    <%= f.text_field :defensive_rebounds, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
    <%= f.label :assistsmade, "Assists:" %>
    <%= f.text_field :assists, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 25px;">
    <%= f.label :turnoversmade, "Turnovers:" %>
    <%= f.text_field :turnovers, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 25px;">
    <%= f.label :stealsmade, "Steals:" %>
    <%= f.text_field :steals, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 25px;">
    <%= f.label :blocksmade, "Blocks:" %>
    <%= f.text_field :blocks, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 25px;">
    <%= f.label :personalfoulsmade, "Personal fouls:" %>
    <%= f.text_field :personal_fouls, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <%= f.submit "Add Stat", class: "btn" %>
<% end %>