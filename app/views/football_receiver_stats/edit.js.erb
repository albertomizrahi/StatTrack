$('.edit_stat_window').html("<%= escape_javascript(render  :partial => 'football_receiver_stats/edit', :locals => { :football_receiver_stat => @football_receiver_stat}) %>");
$('.edit_stat_window').modal();

$('.edit_football_receiver_stat').on('submit', function(e){

    //Check if there is any input field empty and stops the submit event
    var errorCount = 0;
    $('.edit_football_receiver_stat input').each(function(){
        var $this = $(this);
        if($this.val() == ''){

            errorCount = errorCount + 1;
        }
    });

    if(errorCount != 0) {
        e.preventDefault();
        alert("You must complete all the fields.");
    }


});