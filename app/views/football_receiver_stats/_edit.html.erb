<%= form_for(football_receiver_stat) do |f| %>

    <%= f.label :date_played, "Date:" %>
    <%=f.date_select :date_played_on, :start_year => Time.now.year, :end_year => Time.now.year - 20, :order => [:day, :month, :year]  %>

    <%= f.label :opponent_played, "Opponent played:" %>
    <%= f.text_field :opponent %>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
      <%= f.label :rec, "Receptions:" %>
      <%= f.number_field :receptions, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 35px;">
      <%= f.label :tgts, "Reception Targets:" %>
      <%= f.number_field :reception_targets, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 29px;">
      <%= f.label :receivingyards, "Receiving yards:" %>
      <%= f.number_field :receiving_yards, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 29px;">
      <%= f.label :receivingtds, "Receiving Touchdown:" %>
      <%= f.number_field :receiving_touchdowns, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 29px;">
      <%= f.label :longestcatch, "Longest catch:" %>
      <%= f.number_field :longest_reception, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
      <%= f.label :rushingattempts, "Rushing attempts:" %>
      <%= f.number_field :rushing_attempts, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 15px;">
      <%= f.label :rushingyards, "Rushing yards:" %>
      <%= f.number_field :rushing_yards, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 29px;">
      <%= f.label :rushingtds, "Rushing yards:" %>
      <%= f.number_field :rushing_touchdowns, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 29px;">
      <%= f.label :longestrun, "Longest run:" %>
      <%= f.number_field :longest_run, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>

    <fieldset style="float: left;">
      <%= f.label :fum, "Fumbles:" %>
      <%= f.number_field :fumbles, :class => "number_field_only" %>
    </fieldset>

    <fieldset style="float: left; padding-left: 35px;">
      <%= f.label :fumlost, "Fumbles lost:" %>
      <%= f.number_field :fumbles_lost, :class => "number_field_only" %>
    </fieldset>

    <div style="clear: both;"></div>


    <%= f.submit "Edit Stat", class: "btn" %>

<% end %>